{
  "compilerOptions": {
    "target": "es5",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist/*",
    "src/*.d.ts"
  ],
  "include": [
    "src/index.mjs"
  ]
}
